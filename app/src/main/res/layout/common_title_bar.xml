<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/base45dp"
                android:background="@color/colorPrimary">


    <ImageButton
        android:layout_width="@dimen/base60dp"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:padding="@dimen/base15dp"
        android:scaleType="centerCrop"
        android:src="@drawable/selector_btn_back"/>

    <TextView
        android:id="@+id/tv_commom_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/app_name"
        android:textSize="@dimen/base20dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/devider"></RelativeLayout>


</RelativeLayout>