<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/refresh_news"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/base120dp"
        android:layout_height="@dimen/base120dp"
        android:src="@drawable/selector_btn_avator"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:textSize="@dimen/base22dp"/>

    <com.gitant.gitant.ui.widget.RightButton
        android:id="@+id/right_btn_like"
        android:layout_width="match_parent"
        app:iv_src = "@drawable/selector_btn_like"
        app:iv_arrow_src = "@drawable/selector_btn_right"
        app:tv_desc = "我的收藏"
        app:tv_text_size = "@dimen/base9dp"
        android:layout_height="@dimen/base55dp"></com.gitant.gitant.ui.widget.RightButton>



</LinearLayout>